<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/melonlogo"/>

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:hint="  아이디"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_rounded_corner_rectangle"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="  비밀번호"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디저장"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:background="@drawable/loginbutton_stroke_rounded_corner"
        android:textColor="#39F077"
        android:textSize="18dp"
        android:text="로그인" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/kakao_logo"
        android:paddingHorizontal="100dp"
        android:background="@drawable/loginbutton_stroke_rounded_corner_kakao"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="카카오계정 로그인"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="30dp">

    <androidx.appcompat.widget.AppCompatButton
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:background="@drawable/loginbutton_bottom_invisible"
    android:layout_weight="1"
    android:textSize="13dp"
    android:text="아이디 찾기"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="18dp"
        android:layout_marginHorizontal="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton_bottom_invisible"
        android:layout_weight="1"
        android:textSize="13dp"
        android:text="비밀번호 찾기"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="18dp"
        android:layout_marginHorizontal="5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbutton_bottom_invisible"
        android:layout_weight="1"
        android:textSize="13dp"
        android:text="회원가입"/>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#B6B6B6"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginRight="12dp"
        android:paddingTop="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/loginbutton_bottom_invisible2"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="이용약관"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="18dp"
            android:layout_marginHorizontal="3dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/loginbutton_bottom_invisible2"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="유료서비스약관"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="18dp"
            android:layout_marginHorizontal="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/loginbutton_bottom_invisible2"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="개인정보처리방침"/>


</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/loginbutton_bottom_invisible"
        android:textSize="13dp"
        android:text="청소년보호정책"/>

</LinearLayout>